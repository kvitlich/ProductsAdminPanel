<Page x:Class="AdminPanel.CreatingForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminPanel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatingForm">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="579*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="formComboBox" Height="40" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
            <ComboBoxItem Content="Category"></ComboBoxItem>
            <ComboBoxItem Content="Product"></ComboBoxItem>
        </ComboBox>

    </Grid>
</Page>
