<Page x:Class="AdminPanel.CreatingForms.CategoryForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminPanel.CreatingForms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryForm">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="357*"/>
            <RowDefinition Height="92*"/>
        </Grid.RowDefinitions>
        <Button x:Name="confirmButton" Content="Confirm" Click="Confirm" FontSize="20" Grid.Row="1" Height="40" Width="220"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="320" Text="Название категории" GotMouseCapture="NameTextBoxGotMouseCapture" PreviewLostKeyboardFocus="NameTextBoxPreviewLostKeyboardFocus"/>
    </Grid>
</Page>
